@using DemoMVC.Models;
@model JobViewModel

<div class="container mt-5">
    <h1>Thêm Công Việc Mới</h1>
    <hr />

    <form method="post" asp-action="Them" asp-controller="Todolist">
        <div class="mb-3">
            <label asp-for="TenCongViec" class="form-label">Tên Công Việc:</label>
            <input type="text" asp-for="TenCongViec" class="form-control" required />
        </div>
        
        <div class="mb-3 form-check">
            <input type="checkbox" asp-for="TrangThai" class="form-check-input" />
            <label asp-for="TrangThai" class="form-check-label">
                Hoàn Thành
            </label>
        </div>
        
        <div class="btn-group" role="group">
            <button type="submit" class="btn btn-primary">Thêm Công Việc</button>
        </div>
    </form>
</div>