@model StudentViewModel

@{
    ViewData["Title"] = "Đăng Ký Chuyên Ngành";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Đăng Ký Chuyên Ngành</h2>
            <form method="post">
                <div class="form-group mb-3">
                    <label for="mssv" class="form-label">MSSV:</label>
                    <input type="text" class="form-control" id="mssv" name="MSSV" value="@Model?.MSSV" required /> 
                </div>

                <div class="form-group mb-3">
                    <label for="name" class="form-label">Họ Tên:</label>
                    <input type="text" class="form-control" id="name" name="Name" value="@Model?.Name" required />
                </div>

                <div class="form-group mb-3">
                    <label for="diemTB" class="form-label">Điểm Trung Bình:</label>
                    <input type="number" class="form-control" id="diemTB" name="DiemTB" step="0.1" min="0" max="10" value="@Model?.DiemTB" required />
                </div>

                <div class="form-group mb-3">
                    <label for="major" class="form-label">Chuyên Ngành:</label>
                    <select class="form-select" id="major" name="Major" required>
                        <option value="">-- Chọn chuyên ngành --</option>
                        @foreach (var major in StudentViewModel.MajorOptions)
                        {
                            <option value="@major" selected="@(Model?.Major == major)">@major</option>
                        }
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Đăng Ký</button>
            </form>

            @if (Model != null && !string.IsNullOrEmpty(Model.MSSV))
            {
                <div class="alert alert-success mt-4">
                    <h4>Cảm ơn bạn @Model.Name - MSSV: @Model.MSSV đã đăng ký bạn hãy vui lòng kiểm tra lại thông tin!</h4>
                    <p><strong>MSSV:</strong> @Model.MSSV</p>
                    <p><strong>Họ Tên:</strong> @Model.Name</p>
                    <p><strong>Điểm Trung Bình:</strong> @Model.DiemTB</p>
                    <p><strong>Chuyên Ngành:</strong> @Model.Major</p>
                    @if (Model.CountSameMinor > 0)
                    {
                        <hr />
                        <p class="text-info"><strong>Số SV đã đăng ký cùng ngành <span class="badge bg-info">@Model.Major</span>:</strong> <span class="badge bg-success">@Model.CountSameMinor</span></p>
                    }
                </div>
            }
        </div>
    </div>
</div>
